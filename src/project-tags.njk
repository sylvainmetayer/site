---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
permalink: /project-tags/{{ tag }}/
layout: layouts/base.njk
renderData:
  title: "Tagged “{{ tag }}”"
  metaDescription: "All projects tagged with “{{ tag }}”"
---
<div class="page-container">
  <div class="tag-list tag-list--no-wrap">
    <h3 class="tag-list__title">Projects Tagged: "{{ tag | capitalize }}"</h3>
    <a class="btn btn--danger" href="/projects">Remove Tag</a>
  </div>

  {% set projectlist = collections[tag] %}
  {% include "components/projectlist.njk" %}

  <nav>
    <a href="{{ '/projects/' | url }}">← View All Projects</a>
  </nav>
</div>
