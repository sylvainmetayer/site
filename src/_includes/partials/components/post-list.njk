{% if postListItems.length %}
  <section >
    <div >
      <h2 >{{ postListHeading }}</h2>
      <ol  reversed>
        {% for item in postListItems %}
          <li >
            <h3 >
              <a href="{{ item.url }}" >{{ item.data.title }}</a>
            </h3>
            {% if item.data.excerpt %}
              <p >
                {{ item.data.excerpt }}
              </p>
            {% endif %}
            <p >
              <time datetime="{{ item.date | w3DateFilter }}">{{ item.date | date }}</time>
            </p>
          </li>
        {% endfor %}
      </ol>
    </div>
  </section>
{% endif %}
