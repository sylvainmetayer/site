<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/favicon.ico" type="image/png">
  <meta name="google-site-verification" content="XROrcW2Xt6g7cyF4SDNyz08GZeMB90QlstI3SBnUsq0">
  <meta property="og:type" content="website">
  <meta name="og:locale" content="fr_FR">

  <link rel="canonical" href="{{ helpers.url() + page.url }}">
  <meta property="og:url" content="{{ helpers.url() + page.url }}">

  <meta name="author" content="Sylvain METAYER">

  <meta property="og:site_name" content="{{ metadata.title }}">
  <title>{{ title or metadata.title }}</title>

  <meta name="description" content="{{ metaDescription or summary or metadata.description }}">
  <meta property="twitter:description" content="{{ metaDescription or summary or metadata.description }}">
  <meta property="og:description" content="{{ metaDescription or summary or metadata.description }}">

  <link rel="me" href="https://github.com/sylvainmetayer">
  <link rel="me" href="https://twitter.com/sylvain_metayer">
  <link rel="me" href="https://www.linkedin.com/in/sylvainmetayer/">
  <link rel="me" href="https://dev.to/sylvainmetayer">
  <link type="text/plain" rel="author" href="{{ helpers.url() }}/humans.txt">

  <meta name="twitter:creator" content="@sylvain_metayer">
  <meta name="twitter:site" content="@sylvain_metayer">

  {% if generateSocialImage %}
    {% set socialTitle = title or metadata.title %}
    <meta property="og:image" content="{% GenerateSocialImage socialTitle %}" />
    <meta name="twitter:image" content="{% GenerateSocialImage socialTitle %}" />
    <meta property="og:image:alt" content="Illustration pour '{{ title or metadata.title }}'">
    <meta name="twitter:image:alt" content="Illustration pour '{{ title or metadata.title }}'">
  {% endif %}

