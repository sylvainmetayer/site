<section>
  <div class="project-grid">
    {% for post in projectlist | reverse %}
      {% if limit === undefined or loop.index0 < limit %}
        <div class="project-card" {% if post.url == url %} data-current="current item" {% endif %}>
          <h4>
            <a class="project-card__title" href="{{ post.url | url }}">
              {% if post.data.emoji %}
                <span class="project-card__emoji">{{ post.data.emoji }}</span>
              {% endif %}
              {% if post.data.title %}
                {{ post.data.title }}
              {% else %}
                Untitled
              {% endif %}
            </a>
          </h4>
          {% if post.data.date %}
            {{ post.data.date | date }}
          {% endif %}
          {% if post.templateContent %}
            <span>{{ post.templateContent | emojiReadTime }} de lecture</span>
          {% endif %}
          {% if post.data.summary %}
            <p>
              {{ post.data.summary }}
            </p>
          {% endif %}
          {% if post.data.tags %}
            <p class="tag-list">
              {% for tag in post.data.tags %}
                {%- if tag != "project" -%}
                  <span class="project-card__tag tag" rel="tag">{{ tag }}</span>
                {%- endif -%}
              {% endfor %}
            </p>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>
