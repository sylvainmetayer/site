    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@tbranyen/jsdom": "^13.0.0",
    "concurrently": "^4.1.2",
    "html-minifier": "^4.0.0",
    "image-size": "^0.8.3",
    "json-to-scss": "^1.5.0",
    "markdown-it-anchor": "^5.3.0",
    "markdown-it-footnote": "^3.0.2",
