{# {% if page.image %}
    {% asset "{{ page.image }}" alt='{{ page.title }}' class='title-image' %}
{% endif %}

<h1 class="title">
    {{ page.title }}
    {% if page.school %}({{page.school}}) {% endif %}
</h1>

<span class="date">
    <time datetime="{{ date | date('%d-%m-%Y') }}">Publi√© le {{ date | date("%A %d %B %Y")}}</time>
</span>

{% if site.read-time %}
<div class="date">
    {% include read-time.html %}
</div>
{% endif %}

    <div class="post-tags">
        {% for tag in page.tags %}
            <a class="item" href="{{ site.url }}/tags/#{{ tag | slugify }}">{{ tag }}</a>
        {% endfor %}
    </div> #}

{{ content | safe }}

{# {% if page.enable_comments and jekyll.environment != "development" %}
